extends ../layout

block content
  .container.mt-5
    .row.justify-content-center
      .col-md-6
        h2.mb-3.font-weight-bold.text-dark.text-center Inloggen bij Beunotheek

        form(method="POST", action="/auth/login")
          .mb-3
            label.form-label(for="email") E-mailadres*
            input#email.form-control(type="email", name="email", placeholder="E-mailadres*", required, 
              class=(error ? "is-invalid" : "") value=(typeof email !== 'undefined' ? email : ''))
            if error
              .invalid-feedback Email of Wachtwoord incorrect

          .mb-3
            label.form-label(for="password") Wachtwoord*
            input#password.form-control(type="password", name="password", placeholder="Wachtwoord*", required,
              class=(error ? "is-invalid" : ""))
            if error
              .invalid-feedback Email of Wachtwoord incorrect

          .mb-3
            button.btn.btn-primary.w-100(type="submit") INLOGGEN

