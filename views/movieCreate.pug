extends layout

block content
  h1= title

  form(action="/movies/create" method="post")
    .mb-3
      label.form-label(for="title") Titel
      input.form-control(type="text" name="title" id="title" required)

    .mb-3
      label.form-label(for="description") Beschrijving
      textarea.form-control(name="description" id="description")

    .mb-3
      label.form-label(for="release_year") Uitgavejaar
      input.form-control(type="number" name="release_year" id="release_year")

    .mb-3
    label.form-label(for="language_id") Taal
    select.form-select(name="language_id" id="language_id" required)
        option(value="" disabled selected) Kies een taal
        each lang in languages
            option(value=lang.language_id)= lang.name

    .mb-3
      label.form-label(for="rental_duration") Verhuurtermijn
      input.form-control(type="number" name="rental_duration" id="rental_duration")

    .mb-3
      label.form-label(for="rental_rate") Verhuurprijs
      input.form-control(type="number" step="0.01" name="rental_rate" id="rental_rate")

    .mb-3
      label.form-label(for="replacement_cost") Vervangingskost
      input.form-control(type="number" step="0.01" name="replacement_cost" id="replacement_cost")

    .mb-3
      label.form-label(for="length") Lengte
      input.form-control(type="number" name="length" id="length")

    .mb-3
      label.form-label(for="rating") Leeftijdsclassificatie
      input.form-control(type="text" name="rating" id="rating")

    .mb-3
      label.form-label(for="image") Afbeelding URL
      input.form-control(type="text" name="image" id="image")

    button.btn.btn-success(type="submit") Toevoegen
