doctype html
html
  head
    title= title
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/stylesheets/style.css")

  body.d-flex.flex-column.min-vh-100
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.py-3
      .container
        a.navbar-brand.d-flex.align-items-center(href="/")
          img(src="/images/Beunotheek-logo-transparant-outline.png", alt="Beunotheek Logo", width="30", height="30", class="d-inline-block align-text-top me-2")
          | Beunotheek
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNavAltMarkup", aria-controls="navbarNavAltMarkup", aria-expanded="false", aria-label="Toggle navigation")
          span.navbar-toggler-icon
        #navbarNavAltMarkup.collapse.navbar-collapse
          .navbar-nav.me-auto
            a.nav-link(aria-current="page", href="/") Home
            a.nav-link(href="/movies") Films
            a.nav-link(href="/about") Over ons

          .navbar-nav
            if !isAuthenticated
              a.nav-link(href="/auth/login") Login
              a.nav-link(href="/auth/register") Registreer
            else
              span.nav-link.text-white Hallo, #{username}!
              a.nav-link(href="/auth/logout") Uitloggen

    main.container.flex-grow-1.my-5
      block content

    footer.bg-dark.text-white.py-4.mt-auto
      .container.text-center
        p.mb-0 &copy; #{new Date().getFullYear()} Beunotheek. Alle rechten voorbehouden.

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js")
